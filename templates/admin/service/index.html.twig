{% extends 'admin/layout.html.twig' %}

{% block admin_body %}
  <div class="card">
    <div class="header-row">
      <h2>Services</h2>
      <a class="btn" href="{{ path('admin_service_new') }}">Ajouter</a>
    </div>
    <table>
      <thead>
        <tr>
          <th>Ordre</th>
          <th>Titre</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for service in services %}
          <tr>
            <td>{{ service.position }}</td>
            <td>{{ service.title }}</td>
            <td>{{ service.description }}</td>
            <td>
              <a class="btn secondary" href="{{ path('admin_service_edit', {id: service.id}) }}">Modifier</a>
              <form method="post" action="{{ path('admin_service_delete', {id: service.id}) }}" style="display:inline;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete-service-' ~ service.id) }}">
                <button class="btn" type="submit">Supprimer</button>
              </form>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="4">Aucun service.</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
